set winname class
set padding 0 0 0 18
exec xmobar
startup_message off
addhook switchframe banishrel
escape Super_L

bind left prevscreenframe
bind h prevscreenframe
bind s-h prevscreenframe
bind Left prevscreenframe
bind s-Left prevscreenframe

bind right nextscreenframe
bind l nextscreenframe
bind s-l nextscreenframe
bind Right nextscreenframe
bind s-Right nextscreenframe

bind j focusdown
bind s-j focusdown

bind k focusup
bind s-k focusup

bind r exec
bind s-r exec

bind t time

bind plus exec amixer -q set Master 1dB+
bind minus exec amixer -q set Master 1dB-

bind v ratclick 2

bind i invertcolors

# Goes to the next frame if there is one.
# If not, it moves to the next screen.
alias nextscreenframe exec RAT_FRAME="$(ratpoison -c curframe)"; ratpoison -c focusright; if [ "$RAT_FRAME" == "$(ratpoison -c curframe)" ]; then ratpoison -c nextscreen; fi;
alias prevscreenframe exec RAT_FRAME="$(ratpoison -c curframe)"; ratpoison -c focusleft; if [ "$RAT_FRAME" == "$(ratpoison -c curframe)" ]; then ratpoison -c prevscreen; fi;
# Requires the xcalib package. Install from yaourt if you are on Arch.
alias invertcolors exec ratpoison -c "windows %s%x" | while read p; do if [ "${p:0:1}" == "*" ]; then xcalib -i -a -screen ${p:1:2}; fi done
