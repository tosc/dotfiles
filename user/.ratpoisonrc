set winname class
set padding 0 0 0 18
exec xmobar
unmanage stalonetray
exec stalonetray
exec nm-applet
startup_message off

exec rm -r ~/tmp/ratf

grename :0:

addhook switchframe banishrel
addhook switchframe exec ~/git/dotfiles/scripts/ratgroups.sh

escape Super_L

bind h prevscreenframe
bind Left prevscreenframe
bind l nextscreenframe
bind Right nextscreenframe

bind j upscreenframe
bind k downscreenframe

bind q kill
bind t time

bind minus exec amixer -q set Master 1dB-
bind period exec amixer -q set Master 1dB+

bind s split
bind v hsplit
bind plus ratclick 2

bind i invertcolors

bind exclam exec bashrun

bind z select -
bind Z moveprev

bind space other
bind S-space focuslast

bind odiaeresis select

bind H exec ~/git/dotfiles/scripts/ratswap.sh 0 0
bind L exec ~/git/dotfiles/scripts/ratswap.sh 0 1
bind J exec ~/git/dotfiles/scripts/ratswap.sh 1 0
bind K exec ~/git/dotfiles/scripts/ratswap.sh 1 1

bind g groups

bind R exec ~/git/dotfiles/scripts/ratmerge.sh

# Goes to the next frame if there is one.
# If not, it moves to the next screen.
alias nextscreenframe exec ratpoison -c "fselect $(~/git/dotfiles/scripts/ratframe.sh 0 1)"
alias prevscreenframe exec ratpoison -c "fselect $(~/git/dotfiles/scripts/ratframe.sh 0 0)"
alias upscreenframe exec ratpoison -c "fselect $(~/git/dotfiles/scripts/ratframe.sh 1 1)"
alias downscreenframe exec ratpoison -c "fselect $(~/git/dotfiles/scripts/ratframe.sh 1 0)"
# Requires the xcalib package. Install from yaourt if you are on Arch.
alias invertcolors exec ratpoison -c "windows %s%x" | while read p; do if [ "${p:0:1}" == "*" ]; then xcalib -i -a -screen ${p:1:2}; fi done
alias moveprev exec ratpoison -c focuslast; ratpoison -c "select -"; ratpoison -c focuslast; ratpoison -c other

alias split exec ratpoison -c vsplit; ratpoisonc -c "fselect $(~/git/dotfiles/scripts/ratframe.sh 1 0)"; sleep .05; ratpoison -c "select -"
