set winname class
set padding 0 0 0 18
exec xmobar
unmanage stalonetray
exec stalonetray
exec nm-applet
startup_message off
addhook switchframe banishrel
escape Super_L

bind h prevscreenframe
bind Left prevscreenframe
bind l nextscreenframe
bind Right nextscreenframe

bind j focusdown
bind k focusup

bind q kill
bind t time

bind plus exec amixer -q set Master 1dB+
bind minus exec amixer -q set Master 1dB-

bind v ratclick 2

bind i invertcolors

bind exclam exec bashrun

bind z select -
bind Z moveprev

bind space other
bind S-space focuslast

bind odiaeresis select

# Goes to the next frame if there is one.
# If not, it moves to the next screen.
alias nextscreenframe exec ~/git/dotfiles/scripts/ratmove.sh 1
alias prevscreenframe exec ~/git/dotfiles/scripts/ratmove.sh 0
# Requires the xcalib package. Install from yaourt if you are on Arch.
alias invertcolors exec ratpoison -c "windows %s%x" | while read p; do if [ "${p:0:1}" == "*" ]; then xcalib -i -a -screen ${p:1:2}; fi done
alias moveprev exec ratpoison -c focuslast; ratpoison -c "select -"; ratpoison -c focuslast; ratpoison -c other
